@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 text-center">
            <h4>Form Data capture using ViewData</h4>
        </div>
        <div class="col-sm-6 text-center">
            <h4>Form Data capture using ViewBag</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <form action="/Home/ViewDataSubmit" method="post">
                <div class="row">
                    <div class="col-sm-4">Student Name</div>
                    <div class="col-sm-8">
                        <input class="form-control" name="name" maxlength="100" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">Address</div>
                    <div class="col-sm-8">
                        <input class="form-control" name="address" maxlength="100" />
                    </div>
